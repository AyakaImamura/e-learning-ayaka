<div class="container mt-5 lesson-container">
    <div class="row">
        <% @categories.each do |category| %>
            <div class="col-6">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= category.title %></h5><!--カテゴリ名-->
                        <p class="card-text"><%= category.description %></p><!--description　説明文-->
                        <% @lesson = current_user.took_lesson(category) %>
                        <% if @lesson.nil? %>
                            <%= button_to "Start Lesson",lessons_path(category_id: category.id), class: "btn btn-primary float-right"%>
                        <% else %>
                            <%= link_to "Show Result", lesson_path(@lesson), class: "btn btn-light float-right" %>
                        <% end %>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="paginate text-center">
        <%= will_paginate %>
    </div>
</div>